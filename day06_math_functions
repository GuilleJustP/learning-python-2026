# Exercise 1: Average function
def calculate_average(numbers):
    total = sum(numbers)
    average = total / len(numbers)
    return f"\n The average of the list {numbers} is: {average:.2f}"
numbers = [10, 20, 30, 40, 50]
print(calculate_average(numbers))

# Exercise 2: Circle area function
import math
def calculate_circle_area(radius):
    area = math.pi * radius ** 2
    return f"\n The area of a circle with radius {radius} is: {area:.2f}"
radius = 22222220
if radius <= 0:
    print("Radius must be a positive number.")
elif radius > 100000:
    print("Radius is too large to compute.")
else:
    print(calculate_circle_area(radius))

